extends layout

block content
	h2.min New Post
	br
	form(name="submitpost", method="POST", action="/submitpost")
		.form-group
			label(class="sr-only" for="title") Title:
			input(class="form-control", type="text", placeholder="Title", id="title", name="title", style="font-size:10pt")
		br
			
		.form-group
			label(class="sr-only", for="contents") Post:
			textarea.tinymce(class="input-block-level", id="contents", name="contents", rows="25")
		br
		
		//button(type="button", class="btn btn-default show-content") Save
		button(type="submit", class="btn btn-default center") Post Entry