extends layout

block content
	h2.min New Post
	br
	form(name="submitpost", method="POST", action="/submitpost")
		.form-group
			label(class="sr-only" for="title") Title:
			input(class="form-control", type="text", placeholder="Title", id="title", name="title", style="font-size:10pt")
		br
		
		//form-group
		//
			label(class="sr-only" for="contents") Post:
			textarea(class="form-control", placeholder="Blog Post", id="contents", name="contents", rows="10" style="font-size:10pt")
			br
			br 
			
			
		.form-group
			label(class="sr-only", for="summernote") Post:
			textarea(class="input-block-level", id="summernote", name="contents", rows="18")
		br
		
		button(type="submit" class="btn btn-default") Post Entry